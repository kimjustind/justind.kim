---
import BaseLayout from '../../layouts/BaseLayout.astro'
const allPosts = await Astro.glob('../posts/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
  </head>
  <body>
  <BaseLayout title="justind.kim | Tags">
    <div class="min-h-[70vh] flex items-center justify-center">
      <div id="tagCloud" class="py-16 w-full relative flex justify-center">
        {tags.map((tag) => 
          <a href={`/tags/${tag}`} class="tag inline-block px-4 py-2 m-2 bg-opacity-10 bg-white dark:bg-opacity-10 dark:bg-gray-800 backdrop-blur-sm rounded-lg text-xl transition-all duration-300 hover:scale-125 hover:bg-opacity-100 dark:hover:bg-opacity-100 shadow-sm hover:shadow-md">
            {tag}
          </a>
        )}
      </div>
    </div>
  </BaseLayout>

  <script>
    import { gsap } from 'gsap';
    
    document.addEventListener('DOMContentLoaded', () => {
      const tags = document.querySelectorAll('.tag');
      
      // Randomize starting positions
      tags.forEach(tag => {
        // Generate random values for positioning
        const xPos = Math.random() * 20 - 10; // -10 to 10
        const yPos = Math.random() * 20 - 10; // -10 to 10
        const zPos = Math.random() * 40 - 20; // -20 to 20
        const rotation = Math.random() * 20 - 10; // -10 to 10
        
        // Apply initial random positions with GSAP
        gsap.set(tag, {
          x: xPos,
          y: yPos,
          z: zPos,
          rotationX: rotation,
          rotationY: rotation,
          rotationZ: rotation
        });
        
        // Create floating animation
        gsap.to(tag, {
          x: '+=' + (Math.random() * 20 - 10),
          y: '+=' + (Math.random() * 20 - 10),
          z: '+=' + (Math.random() * 40 - 20),
          rotationX: '+=' + (Math.random() * 10 - 5),
          rotationY: '+=' + (Math.random() * 10 - 5),
          rotationZ: '+=' + (Math.random() * 10 - 5),
          duration: 8 + Math.random() * 10,
          ease: 'sine.inOut',
          repeat: -1,
          yoyo: true
        });
      });
    });
  </script>
  </body>
</html>