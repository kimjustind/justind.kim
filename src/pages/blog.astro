---
import BaseLayout from '../layouts/BaseLayout.astro'
const allPosts = Object.values(import.meta.glob('../pages/posts/*.md', { eager: true}));

// Sort posts by date (newest first)
const sortedPosts = allPosts.sort((a, b) => {
  return new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime();
});

// Format date to be more readable
function formatDate(dateString) {
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} >
    <style>
      .posts-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: clamp(1rem, 3vw, 2rem);
        padding: clamp(1rem, 3vw, 2rem) 1rem;
        justify-content: center;
        max-width: 1200px;
        margin: 0 auto;
        width: 100%;
      }
      
      .post-card {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 0.5rem;
        padding: clamp(1rem, 3vw, 1.5rem);
        border: 1px solid rgba(255, 255, 255, 0.1);
        height: 100%;
        display: flex;
        flex-direction: column;
        position: relative;
        overflow: hidden;
        opacity: 0;
        transform: translateY(50px);
      }
      
      .post-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        background-color: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.2);
        opacity: 1;
      }
      
      .post-title {
        font-size: clamp(1.25rem, 3vw, 1.5rem);
        margin-bottom: 0.5rem;
        transition: color 0.3s ease;
        line-height: 1.3;
      }
      
      .post-card:hover .post-title {
        color: #C5D1EB;
      }
      
      .post-meta {
        font-size: clamp(0.75rem, 2vw, 0.875rem);
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: clamp(0.75rem, 2vw, 1rem);
      }
      
      .post-description {
        font-size: clamp(0.875rem, 2vw, 1rem);
        margin-bottom: clamp(0.75rem, 2vw, 1rem);
        flex-grow: 1;
        line-height: 1.6;
      }
      
      .post-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: auto;
      }
      
      .tag {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 9999px;
        padding: 0.25rem 0.75rem;
        font-size: clamp(0.7rem, 1.5vw, 0.75rem);
        transition: all 0.3s ease;
        white-space: nowrap;
      }
      
      .post-card:hover .tag {
        background-color: rgba(255, 255, 255, 0.2);
      }
      
      .post-image {
        width: 100%;
        height: clamp(120px, 25vw, 150px);
        object-fit: cover;
        border-radius: 0.25rem;
        margin-bottom: clamp(0.75rem, 2vw, 1rem);
      }
      
      .read-more {
        margin-top: clamp(0.75rem, 2vw, 1rem);
        color: #C5D1EB;
        font-weight: 500;
        display: inline-block;
        transition: all 0.3s ease;
        font-size: clamp(0.875rem, 2vw, 1rem);
      }
      
      .post-card:hover .read-more {
        transform: translateX(5px);
      }
      
      .posts-wrapper {
        display: flex;
        justify-content: center;
        width: 100%;
      }
      
      .blog-header {
        padding: clamp(2rem, 5vw, 4rem) clamp(1rem, 3vw, 2rem);
        text-align: center;
      }
      
      .blog-header h1 {
        font-size: clamp(2rem, 6vw, 4rem);
        line-height: 1.2;
        margin-bottom: clamp(0.5rem, 2vw, 1rem);
      }
      
      .blog-header p {
        font-size: clamp(1rem, 2.5vw, 1.25rem);
        opacity: 0.8;
      }
      
      @media (max-width: 640px) {
        .posts-container {
          grid-template-columns: 1fr;
        }
        
        .post-card {
          margin-bottom: 1rem;
        }
        
        .post-tags {
          margin-top: 0.75rem;
        }
      }
    </style>
  </head>
  <body>
    <BaseLayout title="Blog">
      <div class="blog-header">
        <h1 class="text-4xl sm:text-6xl">my blog</h1>
        <p class="text-lg sm:text-xl mt-4 text-gray-300">thoughts, stories, and ideas</p>
      </div>
      
      <div class="posts-wrapper">
        <div class="posts-container">
          {sortedPosts.map((post) => (
            <a href={post.url} class="post-card-link">
              <div class="post-card">
                {post.frontmatter.image && post.frontmatter.image.url && (
                  <img 
                    src={post.frontmatter.image.url} 
                    alt={post.frontmatter.image.alt || post.frontmatter.title} 
                    class="post-image"
                  />
                )}
                <h2 class="post-title">{post.frontmatter.title}</h2>
                <div class="post-meta">
                  {post.frontmatter.author && <span>By {post.frontmatter.author}</span>}
                  {post.frontmatter.pubDate && (
                    <span> • {formatDate(post.frontmatter.pubDate)}</span>
                  )}
                </div>
                {post.frontmatter.description && (
                  <p class="post-description">{post.frontmatter.description}</p>
                )}
                {post.frontmatter.tags && (
                  <div class="post-tags">
                    {post.frontmatter.tags.slice(0, 3).map((tag) => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
                <div class="read-more">Read more →</div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </BaseLayout>

    <script>
      import { gsap } from "gsap";
      
      window.addEventListener("load", () => {
        // Fade in header
        gsap.from(".blog-header", { 
          opacity: 0, 
          y: 30, 
          duration: 1,
          ease: "power3.out"
        });
        
        // Animate cards up from bottom
        gsap.to(".post-card", { 
          opacity: 1,
          y: 0,
          duration: 0.5,
          stagger: {
            amount: 0.5,
            ease: "power3.out"
          }
        });

        // Add resize observer for smooth grid transitions
        const postsContainer = document.querySelector('.posts-container');
        if (postsContainer) {
          const observer = new ResizeObserver(entries => {
            entries.forEach(entry => {
              const cards = entry.target.querySelectorAll('.post-card');
            });
          });
          
          observer.observe(postsContainer);
        }
      });
    </script>
  </body>
</html>