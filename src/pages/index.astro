---
import BaseLayout from '../layouts/BaseLayout.astro'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <title>justind.kim</title>
  </head>
  <body>
    <BaseLayout>
      <header class="h-screen">
        <div id="intro" class="h-3/5 flex flex-col justify-end text-center px-5">
          <h1 id="title" class="text-4xl underline sm:text-8xl">justind.kim</h1>
          <div class="my-4">
            <h2 class="text-2xl sm:text-4xl">my name is Justin D. Kim</p>
            <p class="text-lg sm:text-xl my-2">that's probably why i bought this domain name</p>
            <p class="text-lg sm:text-xl">what do i do with this website ;-;</p>
          </div>
        </div>
      </header>
      <section id="animated-section" class="h-screen">
        <div id="about" class="text-center flex flex-col w-full h-3/4 justify-center items-center px-5">
          <p class="text-md sm:text-lg">this site was built with Astro, TailwindCSS, and GSAP</p>
          <p class="text-md sm:text-lg"><a href="https://github.com/kimjustind/justind.kim" class="underline">check out the github repository</a></p>
          <p class="text-md sm:text-lg">if you would like to know more <a href="/about" class="underline">about me</a>, check out my <a href="/about" class="underline">about me page</a> so you can know more <a href="/about" class="underline">about me</a> (check <a href="/about" class="underline">it</a> out)</a></p>
        </div>
      </section>
    </BaseLayout>
    <script>
      import { gsap } from "gsap";
      import { ScrollTrigger } from "gsap/ScrollTrigger";

      gsap.registerPlugin(ScrollTrigger);

      gsap.to("#intro", { scrollTrigger: { scrub: 1, trigger: 'section', start: 'top bottom', end: 'top center' }, opacity: 0, y: 300 });

      gsap.from("section", { immediateRender: true, scrollTrigger: { scrub: 1, trigger: '#intro', start: 'center', end: 'bottom' }, opacity: 0, x: -100 });

      const title = document.getElementById("title");

      window.addEventListener("load", () => {
        gsap.from("header", { opacity: 0, duration: 1, y: -100 });
      })

    </script>
  </body>
</html>

<style>
  #intro {
    will-change: transform, opacity;
  }
  #animated-section {
    will-change: transform, opacity;
  }
</style>